            if line[1]==x:
                pass
            elif n in line[3] and int(line[4])>35000:
                print(line[1])
                x=(line[1])
        o=(input("Which company shall I select?"))
        print("Alright "+o+" it is." )
        b=input(("Reselect Company?(Y/N)"))
        with open('C:/Users/Acer/Desktop/UPDATED DATABASE/2019.csv', 'r') as csv_file:
