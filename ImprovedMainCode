            for line in csv_reader:
                if line[1] == o:
                    print(line[2])
        if "reselect"in b:
            deduce(f)
        else:
            j = " "
            s = " "
            P = (input("What model do you want? "))
            with open('C:/Users/Acer/Desktop/UPDATED DATABASE/2019.csv', 'r') as csv_file:
                csv_reader = csv.reader(csv_file)
                for line in csv_reader:
                    if line[1] == o and line[2] == P:
                        j = j + " "
                    else:
                        s = s + " "
                if j != " ":
